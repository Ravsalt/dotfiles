configuration {
    /* Display */
    font: "JetBrainsMono Nerd Font 12";
    show-icons: true;
    icon-theme: "Papirus";
    
    /* Layout */
    width: 40%;
    lines: 8;
    padding: 15px;
    border-radius: 8px;
    
    /* Behavior */
    modi: "drun,run,window";
    show-icons: true;
    terminal: "kitty";
    
    /* Colors */
    bg: #1e1e2e;
    bg-alt: #181825;
    fg: #cdd6f4;
    accent: #89b4fa;
    urgent: #f38ba8;
    active: #a6e3a1;
}
